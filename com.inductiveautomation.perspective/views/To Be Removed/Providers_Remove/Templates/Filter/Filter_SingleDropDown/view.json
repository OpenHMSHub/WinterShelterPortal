{
  "custom": {},
  "params": {
    "options": [],
    "placeholder": "",
    "selection": ""
  },
  "propConfig": {
    "params.options": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.placeholder": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.selection": {
      "paramDirection": "inout",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 30,
      "width": 220
    }
  },
  "root": {
    "children": [
      {
        "events": {
          "dom": {
            "onClick": {
              "config": {
                "script": "\t#print \"Icon click\"\n\tself.view.params.selection \u003d None"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
          "name": "Icon"
        },
        "position": {
          "basis": "16px",
          "shrink": 0
        },
        "props": {
          "color": "#0C4E8B",
          "path": "material/close",
          "style": {
            "classes": "Table/Filter_Clear_Icon"
          }
        },
        "type": "ia.display.icon"
      },
      {
        "meta": {
          "name": "Dropdown"
        },
        "position": {
          "basis": "220px",
          "grow": 1
        },
        "propConfig": {
          "props.options": {
            "binding": {
              "config": {
                "path": "view.params.options"
              },
              "type": "property"
            }
          },
          "props.placeholder.text": {
            "binding": {
              "config": {
                "path": "view.params.placeholder"
              },
              "type": "property"
            }
          },
          "props.value": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.selection"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "dropdownOptionStyle": {
            "classes": "Table/Filter_Text"
          },
          "placeholder": {
            "color": "#AAAAAA",
            "icon": {
              "color": "#0C4E8B",
              "style": {
                "height": "8px",
                "width": "8px"
              }
            }
          },
          "style": {
            "classes": "Table/Filter_Text"
          },
          "wrapMultiSelectValues": false
        },
        "type": "ia.input.dropdown"
      }
    ],
    "meta": {
      "name": "root"
    },
    "propConfig": {
      "props.style.classes": {
        "binding": {
          "config": {
            "path": "./Dropdown.props.value"
          },
          "transforms": [
            {
              "code": "\tif value \u003d\u003d -1 or value \u003d\u003d None:\n\t\treturn \"Dropdowns/DD_Default\"\n\telse:\n\t\treturn \"Dropdowns/DD_TeelBlue\"",
              "type": "script"
            }
          ],
          "type": "property"
        }
      }
    },
    "props": {
      "alignItems": "center",
      "style": {}
    },
    "type": "ia.container.flex"
  }
}