{
  "custom": {},
  "params": {
    "label": "",
    "placeholder": "",
    "text": ""
  },
  "propConfig": {
    "params.label": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.placeholder": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.text": {
      "paramDirection": "inout",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 50
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Label"
        },
        "position": {
          "basis": "24px"
        },
        "propConfig": {
          "props.text": {
            "binding": {
              "config": {
                "path": "view.params.label"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "style": {
            "classes": "Text/Add_HeaderText"
          }
        },
        "type": "ia.display.label"
      },
      {
        "meta": {
          "name": "TextArea"
        },
        "position": {
          "basis": "25px",
          "grow": 1
        },
        "propConfig": {
          "props.placeholder": {
            "binding": {
              "config": {
                "path": "view.params.placeholder"
              },
              "type": "property"
            }
          },
          "props.text": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.text"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "deferUpdates": false,
          "style": {
            "borderStyle": "none",
            "classes": "Text/Add_InfoText",
            "marginBottom": "0px",
            "marginLeft": "10px",
            "marginRight": "10px",
            "marginTop": "0px"
          }
        },
        "type": "ia.input.text-area"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column",
      "style": {
        "overflow": "visible"
      }
    },
    "type": "ia.container.flex"
  }
}